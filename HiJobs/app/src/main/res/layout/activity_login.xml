<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF2FE"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <ImageView
                android:id="@+id/imgLog_HiJobs"
                android:layout_width="235dp"
                android:layout_height="182dp"
                android:layout_marginTop="50dp"
                android:translationX="80dp"
                android:translationY="-25dp"
                app:srcCompat="@drawable/login_logo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/andika_new_basic"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="20sp"
                android:translationX="50dp"
                android:translationY="-25dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/txtLog_Email"
                android:layout_width="310dp"
                android:layout_height="53dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittxt_shape"
                android:ems="10"
                android:hint="Masukkan email"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="18sp"
                android:translationX="50dp"
                android:translationY="-25dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/andika_new_basic"
                android:text="Kata Sandi"
                android:textColor="#000000"
                android:textSize="20sp"
                android:translationX="50dp"
                android:translationY="-25dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/txtLog_KataSandi"
                android:layout_width="310dp"
                android:layout_height="55dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittxt_shape"
                android:ems="10"
                android:hint="Masukkan kata sandi"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="18sp"
                android:translationX="50dp"
                android:translationY="-25dp" />

            <CheckBox
                android:id="@+id/chkLog_TampilSandi"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Tampilkan Kata Sandi"
                android:translationX="50dp"
                android:translationY="-25dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnLog_Masuk"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:fontFamily="sans-serif-medium"
                android:text="Masuk"
                android:textSize="16sp"
                android:translationX="50dp"
                android:translationY="-25dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Lupa Kata Sandi?"
                android:textColor="#3F51B5"
                android:translationX="50dp"
                android:translationY="-25dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginStart="52dp"
                android:background="#838181"
                android:translationY="15dp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="ATAU"
                android:textColor="#000000"
                android:translationX="190dp"
                android:translationY="-20dp" />

            <View
                android:id="@+id/view2"
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:background="#838181"
                android:translationX="240dp"
                android:translationY="-30dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:translationY="-40dp" />

            <Button
                android:id="@+id/btnLog_MasukGoogle"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#FFFFFF"
                android:text="Masuk dengan Google"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#000000"
                android:translationX="50dp"
                android:translationY="-15dp"
                android:visibility="gone"
                app:icon="@drawable/google"
                app:iconSize="25dp"
                app:iconTintMode="multiply" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="16dp"
                android:text="Belum punya akun? "
                android:textColor="#3A3A3A"
                android:translationX="115dp"
                android:translationY="-15dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="49dp"
                android:layout_height="19dp"
                android:text="Daftar"
                android:textColor="#000000"
                android:textStyle="bold"
                android:translationX="250dp"
                android:translationY="-34dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>